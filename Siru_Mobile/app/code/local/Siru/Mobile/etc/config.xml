<?xml version="1.0"?>
<config>
    <modules>
        <Siru_Mobile>
            <version>1.0.0.0</version>
        </Siru_Mobile>
    </modules>
    <frontend>
        <routers>
            <mobile>
                <use>standard</use>
                <args>
                    <module>Siru_Mobile</module>
                    <frontName>sirumobile</frontName>
                </args>
            </mobile>
        </routers>
        <translate>
            <modules>
                <Your_Extension>
                    <files>
                        <default>Siru_Mobile.csv</default>
                    </files>
                </Your_Extension>
            </modules>
        </translate>
    </frontend>
    <global>
        <models>
            <siru_mobile>
                <class>Siru_Mobile_Model</class>
            </siru_mobile>
        </models>
        <helpers>
            <siru_mobile>
                <class>Siru_Mobile_Helper</class>
            </siru_mobile>
        </helpers>
        <blocks>
            <siru_mobile>
                <class>Siru_Mobile_Block</class>
            </siru_mobile>
        </blocks>
        <resources>
            <siru_mobile_setup>
                <setup>
                    <module>Siru_Mobile</module>
                </setup>
            </siru_mobile_setup>
        </resources>
    </global>
    <default>
        <payment>
            <siru_mobile>
                <active>1</active>
                <model>siru_mobile/Payment</model>
                <order_status>processing</order_status>
                <title>Siru Mobile</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
                <tax_class>3</tax_class>
                <order_status_capture>complete</order_status_capture>
                <service_group>2</service_group>
                <instant_payment>1</instant_payment>
                <purchase_country>FI</purchase_country>
            </siru_mobile>
        </payment>
    </default>
</config>












































